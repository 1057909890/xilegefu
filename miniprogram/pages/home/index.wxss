/* pages/home/index.wxss */
.home-page {
  height: 100vh;
  background: #1E1C33;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 时间选择区 */
.time-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-top: 120rpx;
}

.time-display {
  text-align: center;
  padding: 0;
  background: transparent;
  width: 100%;
}

.time-value {
  display: block;
  font-size: 96rpx;
  font-weight: bold;
  color: #FFFFFF;
  letter-spacing: 4rpx;
  line-height: 1.2;
  margin-bottom: 20rpx;
  text-shadow: 0 0 30rpx rgba(255, 255, 255, 0.5);
}

.time-hint {
  display: block;
  font-size: 28rpx;
  color: #FFFFFF;
  opacity: 0.9;
}

/* 时间选择器弹窗 */
.time-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.time-picker-modal.show {
  display: flex;
}

.time-picker-wrapper {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.picker-time-display {
  text-align: center;
  padding: 60rpx 0 40rpx;
  width: 100%;
}

.picker-time-value {
  display: block;
  font-size: 96rpx;
  font-weight: bold;
  color: #FFFFFF;
  letter-spacing: 4rpx;
  line-height: 1.2;
  margin-bottom: 16rpx;
}

.picker-time-hint {
  display: block;
  font-size: 28rpx;
  color: #FFFFFF;
  opacity: 0.9;
}

.picker-card {
  width: 100%;
  background: rgba(60, 59, 94, 0.9);
  border-radius: 24rpx;
  padding: 40rpx;
  box-sizing: border-box;
  backdrop-filter: blur(10rpx);
}

.picker-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.picker-close {
  font-size: 40rpx;
  color: #D9D9D9;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slider-container {
  margin-bottom: 40rpx;
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #D9D9D9;
}

.quick-buttons {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
  flex-wrap: nowrap;
  gap: 16rpx;
  padding: 0 20rpx;
}

.quick-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #66658B;
  color: #D9D9D9;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  background: transparent;
  flex-shrink: 0;
}

.quick-btn.active {
  background: #8F8EE4;
  border-color: #8F8EE4;
  color: #FFFFFF;
  box-shadow: 0 0 30rpx rgba(143, 142, 228, 0.6);
}

.picker-confirm-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #8F8EE4;
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
}

/* 呼吸节奏区 */
.rhythm-section {
  background: #3C3B5E;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  flex-shrink: 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.edit-icon {
  font-size: 32rpx;
  color: #8F8EE4;
}

.rhythm-display {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  flex-wrap: nowrap;
  gap: 12rpx;
  overflow-x: auto;
}

.rhythm-item {
  padding: 20rpx 28rpx;
  border-radius: 40rpx;
  text-align: center;
  min-width: 100rpx;
  flex-shrink: 0;
  white-space: nowrap;
}

.rhythm-inhale {
  background: #5D5C80;
  color: #FFFFFF;
}

.rhythm-exhale {
  background: #5D5C80;
  color: #FFFFFF;
}

.rhythm-hold {
  background: #5D5C80;
  color: #FFFFFF;
}

.rhythm-item.selected {
  background: #8FE4DF;
  color: #1D1C34;
}

.rhythm-label {
  display: block;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.rhythm-time {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
}

.rhythm-arrow {
  font-size: 32rpx;
  color: #D9D9D9;
  margin: 0 4rpx;
  flex-shrink: 0;
}

.rhythm-hint {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #D9D9D9;
}

/* 呼吸节奏编辑弹窗 */
.rhythm-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.rhythm-modal.show {
  display: flex;
}

.rhythm-editor-content {
  width: 80%;
  max-width: 600rpx;
  background: #3C3B5E;
  border-radius: 24rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

.editor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.editor-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.editor-close {
  font-size: 40rpx;
  color: #D9D9D9;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.rhythm-editor-item {
  margin-bottom: 40rpx;
}

.editor-label {
  display: block;
  font-size: 28rpx;
  color: #D9D9D9;
  margin-bottom: 24rpx;
}

.editor-controls {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.editor-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #5D5C80;
  color: #FFFFFF;
  font-size: 40rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.editor-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  min-width: 120rpx;
  text-align: center;
}

.editor-confirm-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #8F8EE4;
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
  margin-top: 20rpx;
}

/* 训练要点 */
.tips-section {
  background: #3C3B5E;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.tips-list {
  margin-top: 32rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.tip-number {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #8F8EE4;
  color: #FFFFFF;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.tip-text {
  flex: 1;
  font-size: 28rpx;
  color: #D9D9D9;
  line-height: 1.6;
}

/* 开始按钮 */
.start-btn-container {
  padding: 40rpx 0;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}

.start-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #F8C8A3 0%, #AE8FE4 100%);
  border: none;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 60rpx rgba(248, 200, 163, 0.8), 
              0 0 120rpx rgba(174, 143, 228, 0.6),
              0 0 180rpx rgba(248, 200, 163, 0.4);
  z-index: 1;
  padding: 0;
  margin: 0;
  overflow: visible;
}

.start-btn-glow {
  position: absolute;
  top: -40rpx;
  left: -40rpx;
  right: -40rpx;
  bottom: -40rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(248, 200, 163, 0.8) 0%, rgba(174, 143, 228, 0.6) 50%, transparent 100%);
  opacity: 0.6;
  animation: pulse 2s ease-in-out infinite;
  z-index: -1;
  filter: blur(30rpx);
}

.start-btn-glow::before {
  content: '';
  position: absolute;
  top: -60rpx;
  left: -60rpx;
  right: -60rpx;
  bottom: -60rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(248, 200, 163, 0.4) 0%, rgba(174, 143, 228, 0.3) 50%, transparent 100%);
  opacity: 0.5;
  animation: pulse 2s ease-in-out infinite;
  animation-delay: 0.5s;
  filter: blur(50rpx);
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.8;
  }
}

.start-btn-text {
  font-size: 44rpx;
  font-weight: bold;
  color: #FFFFFF;
  position: relative;
  z-index: 2;
  letter-spacing: 2rpx;
  text-shadow: 0 0 20rpx rgba(255, 255, 255, 0.5);
}
