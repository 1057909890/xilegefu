.safety-confirm-btn.active:not([disabled]) {
  background: linear-gradient(to right, #5EC8FF 0%, #4FD4D4 100%) !important;
  box-shadow: 0 4rpx 20rpx rgba(94, 200, 255, 0.3);
  opacity: 1;
}

/* 订阅计划弹窗 */
.subscribe-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  padding: 40rpx;
  box-sizing: border-box;
}

.subscribe-modal.show {
  display: flex;
}

.subscribe-modal-content {
  width: 100%;
  max-width: 680rpx;
  max-height: 85vh;
  background: #1E1C33;
  border-radius: 32rpx;
  padding: 48rpx 40rpx 36rpx;
  box-sizing: border-box;
  overflow-y: auto;
  position: relative;
  display: flex;
  flex-direction: column;
}

.subscribe-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.subscribe-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.subscribe-close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.close-icon {
  font-size: 40rpx;
  color: #FFFFFF;
  line-height: 1;
}

/* 提醒开关区域 */
.reminder-switch-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.reminder-switch-label {
  font-size: 32rpx;
  color: #FFFFFF;
}

.reminder-switch {
  transform: scale(0.9);
}

/* 提醒频率区域 */
.frequency-section {
  margin-bottom: 50rpx;
}

.frequency-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
}

.frequency-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #3C3B5E;
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.frequency-btn.active {
  background: linear-gradient(to right, rgb(34, 211, 238), rgb(59, 130, 246));
  border-color: rgba(94, 200, 255, 0.5);
  box-shadow: 0 0 20rpx rgba(94, 200, 255, 0.4);
}

/* 时间设置区域 */
.time-settings-section {
  margin-bottom: 40rpx;
}

.time-settings-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-top: 24rpx;
}

.time-setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  background: #3C3B5E;
  border-radius: 24rpx;
}

.time-setting-label {
  font-size: 32rpx;
  color: #FFFFFF;
}

.time-setting-value {
  display: flex;
  align-items: center;
  gap: 16rpx;
  cursor: pointer;
}

.time-value-text {
  font-size: 32rpx;
  color: #5EC8FF;
}

.time-value-text.time-placeholder {
  color: rgba(255, 255, 255, 0.4);
}

.time-icon {
  font-size: 32rpx;
  color: #FFFFFF;
}

.section-label {
  display: block;
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 500;
}

.subscribe-buttons {
  display: flex;
  gap: 24rpx;
  margin-top: 20rpx;
}

.subscribe-ignore-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #3C3B5E;
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
  padding:0;
}

.subscribe-confirm-btn {
  flex: 2;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(to right, #5EC8FF 0%, #4FD4D4 100%);
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 20rpx rgba(94, 200, 255, 0.3);
  padding:0;
}

/* 提醒时间选择器弹窗 */
.reminder-time-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 2500;
  padding: 40rpx;
  box-sizing: border-box;
}

.reminder-time-picker-modal.show {
  display: flex;
}

.reminder-time-picker-wrapper {
  width: 100%;
  max-width: 600rpx;
}

.reminder-picker-card {
  background: rgba(30, 30, 69, 0.95);
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-sizing: border-box;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.reminder-picker-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
  text-align: center;
  margin-bottom: 40rpx;
}

.reminder-picker-time-display {
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.reminder-picker-time-value {
  font-size: 56rpx;
  color: #5EC8FF;
  font-weight: 500;
}

.reminder-picker-action-buttons {
  display: flex;
  gap: 20rpx;
}

.reminder-picker-cancel-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(255, 255, 255, 0.05);
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  padding: 0;
}

.reminder-picker-confirm-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(to right, rgb(34, 211, 238), rgb(59, 130, 246));
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 20rpx rgba(94, 200, 255, 0.3);
  padding: 0;
}
