/* pages/complete/index.wxss */
.complete-page {
  min-height: 100vh;
  height: 100vh;
  background: #1E1C33;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

/* 星星背景效果 */
.complete-page::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(2px 2px at 20% 30%, rgba(255, 255, 255, 0.3), transparent),
    radial-gradient(2px 2px at 60% 70%, rgba(255, 255, 255, 0.2), transparent),
    radial-gradient(1px 1px at 50% 50%, rgba(255, 255, 255, 0.4), transparent),
    radial-gradient(1px 1px at 80% 10%, rgba(255, 255, 255, 0.3), transparent),
    radial-gradient(2px 2px at 90% 60%, rgba(255, 255, 255, 0.2), transparent);
  background-size: 200% 200%;
  background-position: 0% 0%, 100% 0%, 50% 50%, 0% 100%, 100% 100%;
  animation: starMove 20s linear infinite;
  pointer-events: none;
}

@keyframes starMove {
  0% {
    background-position: 0% 0%, 100% 0%, 50% 50%, 0% 100%, 100% 100%;
  }
  100% {
    background-position: 100% 100%, 0% 100%, 50% 50%, 100% 0%, 0% 0%;
  }
}

.content-wrapper {
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  z-index: 1;
}

.complete-title {
  font-size: 56rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 40rpx;
  text-align: center;
}

.success-icon {
  margin-bottom: 30rpx;
  animation: scaleIn 0.5s ease-out;
}

.icon-circle {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background: linear-gradient(180deg, #63C7FF 0%, #69E8BD 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 0 60rpx rgba(99, 199, 255, 0.5), 0 0 100rpx rgba(105, 232, 189, 0.3);
}

.checkmark {
  width: 120rpx;
  height: 120rpx;
  filter: drop-shadow(0 0 10rpx rgba(255, 255, 255, 0.5));
}

@keyframes scaleIn {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.encourage-text {
  font-size: 40rpx;
  font-weight: 600;
  color: #FFD700;
  margin-bottom: 60rpx;
  text-align: center;
}

.info-grid {
  width: 100%;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 0;
}

.info-card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  min-height: 160rpx;
}

.info-label {
  font-size: 28rpx;
  color: #D9D9D9;
  margin-bottom: 20rpx;
  text-align: center;
}

.info-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #FFFFFF;
  text-align: center;
}

.action-buttons {
  width: 100%;
  display: flex;
  gap: 24rpx;
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  z-index: 1;
  flex-shrink: 0;
}

.action-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.back-btn {
  background: rgba(255, 255, 255, 0.1);
  color: #FFFFFF;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  padding:0;
}

.history-btn {
  background: linear-gradient(135deg, #5DCFFF 0%, #67EDBC 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 20rpx rgba(93, 207, 255, 0.3);
  padding:0;
}

/* 订阅计划弹窗 */
.subscribe-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  padding: 40rpx;
  box-sizing: border-box;
}

.subscribe-modal.show {
  display: flex;
}

.subscribe-modal-content {
  width: 100%;
  max-width: 680rpx;
  max-height: 85vh;
  background: #1E1C33;
  border-radius: 32rpx;
  padding: 48rpx 40rpx 36rpx;
  box-sizing: border-box;
  overflow-y: auto;
  position: relative;
  display: flex;
  flex-direction: column;
}

.subscribe-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.subscribe-title-section {
  flex: 1;
}

.subscribe-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 12rpx;
}

.subscribe-subtitle {
  display: block;
  font-size: 28rpx;
  color: #D9D9D9;
  opacity: 0.8;
}

.subscribe-switch-wrapper {
  margin-left: 20rpx;
}

.subscribe-switch {
  transform: scale(0.8);
}

.plan-section {
  margin-bottom: 40rpx;
}

.section-label {
  display: block;
  font-size: 28rpx;
  color: #5EC8FF;
  margin-bottom: 24rpx;
  font-weight: 500;
}

.plan-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.plan-card {
  display: flex;
  align-items: center;
  padding: 28rpx 32rpx;
  background: #3C3B5E;
  border-radius: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.plan-card.active {
  background: rgba(94, 200, 255, 0.25);
  border-color: #5EC8FF;
  box-shadow: 0 0 20rpx rgba(94, 200, 255, 0.4);
}

.plan-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  background: rgba(255, 255, 255, 0.1);
}

.plan-card.active .plan-icon {
  background: rgba(94, 200, 255, 0.2);
}

.plan-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.plan-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.plan-subtitle {
  display: block;
  font-size: 24rpx;
  color: #D9D9D9;
  opacity: 0.7;
}

.plan-badge {
  padding: 8rpx 20rpx;
  background: rgba(94, 200, 255, 0.2);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #5EC8FF;
  white-space: nowrap;
}

.plan-card.active .plan-badge {
  background: rgba(94, 200, 255, 0.3);
  color: #5EC8FF;
}

.subscribe-buttons {
  display: flex;
  gap: 24rpx;
  margin-top: 20rpx;
}

.subscribe-ignore-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #3C3B5E;
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
  padding:0;
}

.subscribe-confirm-btn {
  flex: 2;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(to right, #5EC8FF 0%, #4FD4D4 100%);
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 20rpx rgba(94, 200, 255, 0.3);
  padding:0;
}
