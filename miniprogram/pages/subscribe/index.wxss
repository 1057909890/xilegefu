/* pages/subscribe/index.wxss */
.subscribe-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #DDEEF9 0%, #EAF7FE 100%);
  padding: 60rpx 40rpx 200rpx;
  box-sizing: border-box;
}

/* 仪表盘卡片 */
.dashboard-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

.card-header {
  background: linear-gradient(135deg, #8FDD 0%, #90F7D3 100%);
  padding: 32rpx 40rpx;
  text-align: center;
}

.card-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(143, 221, 255, 0.9) 0%, rgba(144, 247, 211, 0.9) 100%);
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #323333;
}

.card-body {
  padding: 40rpx;
}

.body-text {
  display: block;
  font-size: 28rpx;
  color: #323333;
  margin-bottom: 16rpx;
}

.body-text:last-child {
  margin-bottom: 0;
}

/* 提醒卡片 */
.reminder-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  border: 2rpx solid transparent;
  background-image: linear-gradient(#FFFFFF, #FFFFFF),
    linear-gradient(135deg, #FFD3A3 0%, #FFDEC9 100%);
  background-origin: border-box;
  background-clip: padding-box, border-box;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

.reminder-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.bell-icon {
  font-size: 60rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  width: 60rpx;
  text-align: center;
  line-height: 60rpx;
}

.reminder-text {
  flex: 1;
}

.reminder-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #323333;
  margin-bottom: 12rpx;
}

.reminder-subtitle {
  display: block;
  font-size: 28rpx;
  color: #323333;
}

.reminder-options {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.option-btn {
  flex: 1;
  min-width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #E4F2FF;
  color: #323333;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  transition: all 0.3s;
}

.option-btn.active {
  background: linear-gradient(135deg, #8F8EE4 0%, #AE8FE4 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 15rpx rgba(143, 142, 228, 0.3);
}

/* 确认按钮 */
.confirm-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  background: transparent;
}

.confirm-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #C3A5FF 0%, #FEBEE8 100%);
  color: #323333;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}
