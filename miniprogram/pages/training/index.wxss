/* pages/training/index.wxss */
.training-page {
  min-height: 100vh;
  background: #151830;
  padding: 40rpx 40rpx 200rpx;
  box-sizing: border-box;
}

/* 顶部标题栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.close-btn {
  font-size: 40rpx;
  color: #FFFFFF;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 计时器模块 */
.timer-section {
  margin-bottom: 80rpx;
}

.progress-ring {
  position: relative;
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto 60rpx;
}

.progress-canvas {
  position: absolute;
  top: 0;
  left: 0;
}

.timer-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.timer-text {
  display: block;
  font-size: 72rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 16rpx;
}

.timer-label {
  display: block;
  font-size: 24rpx;
  color: #B9C6E2;
}

/* 数据栏 */
.stats-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #262947;
  border-radius: 24rpx;
  padding: 32rpx 0;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #B9C6E2;
  margin-bottom: 12rpx;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #B9C6E2;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #5E678B;
}

/* 呼吸引导模块 */
.breathing-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.breathing-indicator {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  margin: 0 auto 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(180deg, #6ED380 0%, #4CB05D 100%);
  transition: transform 0.5s ease-in-out;
  box-shadow: 0 0 40rpx rgba(110, 211, 128, 0.3);
}

.breathing-indicator.inhale {
  background: linear-gradient(180deg, #6ED380 0%, #4CB05D 100%);
}

.breathing-indicator.exhale {
  background: linear-gradient(180deg, #6ED380 0%, #4CB05D 100%);
}

.breathing-indicator.hold {
  background: linear-gradient(180deg, #82D0FF 0%, #76F5E3 100%);
}

.breathing-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 16rpx;
}

.breathing-count {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.breathing-hint {
  font-size: 28rpx;
  color: #B9C6E2;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 32rpx;
  padding: 40rpx;
  background: #151830;
}

.action-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
  border: none;
}

.pause-btn {
  background: linear-gradient(135deg, #FBB46F 0%, #E88E53 100%);
}

.stop-btn {
  background: linear-gradient(135deg, #F2939B 0%, #E26678 100%);
}
